<!doctype HTML>
<head>
<style>

  table {
    width: 75%;
  }

  table, th, td {
    border: 1px solid black;
  }

</style>
</head>
</body>
  <h3><b>Current Projects:</b></h3>

  <table >
    <tr>
      <th>Project Number</th>
      <th>Project Name</th>
      <th>Delivery Date</th>
      <th>Budget Remaining</th>
      <th>Status</th>
      <th>Manager Name</th>
      <th>Client ID</th>
    </tr>

    <% @projects.each do |project| %>
      <tr>
        <td> <a href="/projects/<%=project.id%>"><%= project.project_number %></a> </td>
        <td> <%= project.project_name %> </td>
        <td> <%= project.delivery_date %> </td>
        <td> <%= project.budget_remaining %> </td>
        <td> <%= project.status %> </td>
        <td> <% if project.project_manager_id %> <a href="/project_managers/<%=ProjectManager.find_by_id(project.project_manager_id).username%>"> <%= ProjectManager.find_by_id(project.project_manager_id).name %> <% end %> </td>
        <td> <% if project.client_id %> <a href="/clients/<%=project.client_id%>"> <%= Client.find_by_id(project.client_id).name %> <% end %> </td>
      </tr>
    <% end %>
  </table>

</body>
