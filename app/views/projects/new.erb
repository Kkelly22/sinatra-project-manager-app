<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h2>Create New Project</h2>

<form method="POST" action="/projects">
  <input type="text" placeholder="Project Number:" name="project_number">
  <input type="text" placeholder="Project Name:" name="project_name">
  <input type="text" placeholder="Delivery Date:" name="delivery_date">
  <input type="text" placeholder="Budget Remaining:" name="budget_remaining">
  <input type="text" placeholder="Status:" name="status">
  <input type="submit" value="Create Project">
</form>
